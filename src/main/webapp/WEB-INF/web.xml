<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>addProjet</servlet-name>
        <servlet-class>com.servlets.Projet.addProjet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProjet</servlet-name>
        <url-pattern>/addProjet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>displayProjet</servlet-name>
        <servlet-class>com.servlets.Projet.displayProjet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayProjet</servlet-name>
        <url-pattern>/shows</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editProjet</servlet-name>
        <servlet-class>com.servlets.Projet.editProjet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editProjet</servlet-name>
        <url-pattern>/editProjet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteProjet</servlet-name>
        <servlet-class>com.servlets.Projet.deleteProjet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProjet</servlet-name>
        <url-pattern>/deleteProjet</url-pattern>
    </servlet-mapping>
</web-app>

